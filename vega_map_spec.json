{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "EV Charger and Petrol Stations in Australia 2024",
    "fontSize": 22,
    "anchor": "start"
  },
  "projection": {
    "type": "conicConformal",
    "rotate": [-133, 31, 0],
    "center": [0, 3],
    "scale": {"expr": "zoom * 850"},
    "translate": [
      {"signal": "(tx * zoom) + width / 2"},
      {"signal": "(ty * zoom) + height / 2"}
    ]
  },
  "params": [
    {
      "name": "zoom",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 3,
        "step": 0.1,
        "name": "Zoom"
      }
    },
    {
      "name": "tx",
      "value": 0,
      "bind": {
        "input": "range",
        "min": -250,
        "max": 250,
        "step": 10,
        "name": "Pan X"
      }
    },
    {
      "name": "ty",
      "value": 0,
      "bind": {
        "input": "range",
        "min": -250,
        "max": 250,
        "step": 10,
        "name": "Pan Y"
      }
    },
    {
      "name": "yearSelector",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2024,
        "step": 1
      }
    },
    {
      "name": "monthSelector",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 12,
        "step": 1
      }
    },
    {
      "name": "showStateNames",
      "value": true,
      "bind": {
        "input": "checkbox",
        "name": "Show States"
      }
    },
    {
      "name": "showCityNames",
      "value": true,
      "bind": {
        "input": "checkbox",
        "name": "Show Cities"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#fffefb"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/WA_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/NT_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/SA_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/QLD_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/NSW_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/VIC_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/TAS_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/ACT_simplified.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1e3c0",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/Petrol_Stations_Clean.csv",
        "format": {"type": "csv"}
      },
      "mark": {
        "type": "point",
        "opacity": 1.0,
        "size": {"expr": "20*zoom"},
        "fill": "#ed9a74",
        "stroke": "#d16405",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "X", "type": "quantitative"},
        "latitude": {"field": "Y", "type": "quantitative"},
        "tooltip": [
          {"field": "N", "type": "nominal", "title": "Petrol Station Name"}
        ]
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/australia_ev_chargers_clean.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "year(datum.DateCreated) <= yearSelector && (month(datum.DateCreated) <= monthSelector || year(datum.DateCreated) < yearSelector)"
        }
      ],
      "mark": {
        "type": "point",
        "opacity": 1.0,
        "size": {"expr": "20*zoom"},
        "fill": "#74b7ed",
        "stroke": "blue",
        "strokeWidth": 0.5,
        "tooltip": {"content": "data"}
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "Name", "type": "nominal", "title": "EV Station Name"},
          {"field": "DateCreated", "type": "temporal", "title": "Date Created"},
          {"field": "AveragePowerOutput", "type": "quantitative", "title": "Avg Power Output (kW)"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"state": "New South Wales", "lat": -32, "lng": 147},
          {"state": "Victoria", "lat": -36.4713, "lng": 144},
          {"state": "Queensland", "lat": -23, "lng": 144},
          {"state": "South Australia", "lat": -29, "lng": 135},
          {"state": "Western Australia", "lat": -26, "lng": 121.7},
          {"state": "Tasmania", "lat": -42, "lng": 141.8},
          {"state": "Northern Territory", "lat": -19, "lng": 133.5}
        ]
      },
      "transform": [
        {
          "filter": "showStateNames"
        }
      ],
      "mark": {
        "type": "text",
        "fontStyle": "bold",
        "font": "roboto",
        "fontSize": {"signal": "zoom * 15"},
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "state", "type": "nominal"}
      }
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/au_cities_small.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "showCityNames"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "point",
            "shape": "circle",
            "opacity": 1.0,
            "fill": "white",
            "stroke": "black",
            "strokeWidth": 1
          },
          "encoding": {
            "longitude": {"field": "lng", "type": "quantitative"},
            "latitude": {"field": "lat", "type": "quantitative"},
            "size": {
              "field": "population",
              "type": "quantitative",
              "scale": {"type": "log", "range": [30, 500]}
            },
            "tooltip": [
              {"field": "city", "type": "nominal", "title": "City"},
              {"field": "population", "type": "quantitative", "title": "Population"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "fontSize": {"signal": "zoom * 15"},
            "color": "black"
          },
        }
      ]
    },
    {
      "data": {
        "url": "https://nl1bs.github.io/Nl1bs/ne_110m_graticules_5.json",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#3d3d3d",
        "strokeWidth": 0.25
      }
    }
  ]
}